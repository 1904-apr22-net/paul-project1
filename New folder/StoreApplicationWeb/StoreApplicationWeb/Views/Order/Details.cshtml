@model StoreApplicationWeb.Models.ModelOrder

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ModelOrder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-10">
            <text>Time:</text>
            @Html.DisplayFor(model => model.TimeStamp)
            <text>&emsp;&emsp;Store:</text>
            @Html.DisplayFor(model => model.Location.Name)
            <text>&emsp;&emsp;Total Cost:</text>
            @Html.DisplayFor(model => model.TotalAmount)
        </dt>
        @foreach (var item in Model.Products)
        {
    <dd class="col-sm-10">
        <text>&emsp;<strong>Product:</strong> &nbsp;</text>
        @Html.DisplayFor(modelItem => item.ProductName)
        <text>&emsp;<strong>Unit Cost:</strong> &nbsp;</text>
        @Html.DisplayFor(modelItem => item.ProductCost)
        <text>&emsp;<strong>Amount:</strong> &nbsp;</text>
        @Html.DisplayFor(modelItem => item.quantitySale)
    </dd>

        }
    </dl>
</div>

<div><strong>
    <a asp-action="Index">Back to List</a>
    </strong>
</div>
